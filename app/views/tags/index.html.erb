<h1 class="h3 mb-3">tags</h1>
<ul class="list-group">
  <% @tags.each do |t| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to t.name, t %>
      <span class="badge text-bg-secondary"><%= t.breweries.count %></span>
    </li>
  <% end %>
</ul>
<div class="my-3">
  <%= paginate @tags %>
</div>
